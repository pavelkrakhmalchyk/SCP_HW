<mvc:View
controllerName="carshop_create.controller.App"
	xmlns="sap.m"
    displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc">
        <App class="sapUiSizeCompact" id="carshop_create">
            <pages>
                <Page title="{i18n>appTitle}">
                    <content>
                        <Panel class="sapUiResponsiveMargin" width="auto">
                            <content>
                            <Button 
                                    text="Create" 
                                    press=".createCarShop"
                                    class="sapUiSmallMarginEnd"/>	
                            <Input 
                                id="input_name" 
                                value="Carshop name"
                                width="20%" />	
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
</mvc:View>