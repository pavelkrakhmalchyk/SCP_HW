{
  "welcomeFile": "/index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt",
      "csrfProtection":true,
      "authenticationType":"xsuaa",
      "scope":{  
        "GET":[  
            "$XSAPPNAME.view"
        ],
        "POST":[  
            "$XSAPPNAME.edit"
        ],
        "PUT":[  
            "$XSAPPNAME.edit"
        ],
        "DELETE":[  
            "$XSAPPNAME.edit"
        ],
        "default":"$XSAPPNAME.view"
      }
    }
  ]
}