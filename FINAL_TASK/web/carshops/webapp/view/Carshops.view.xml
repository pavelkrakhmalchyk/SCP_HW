<View
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	controllerName="carshops.controller.Carshops">
	<Page
		title="CarShops">
		<List id="carshops" 
				items="{odata>/CarShops}"
				mode="SingleSelectMaster"
				selectionChange="onSelectionChange"
                updateFinished="onUpdateFinished">
            <headerToolbar>
                <Toolbar>
                    <Button
                        tooltip="Add new carshop"
                        icon="sap-icon://add"
                        press="onAddCarShopPress" />
                    <Button 
                        icon="sap-icon://edit" 
                        tooltip="Edit carshop" 
                        press="onEditCarShopPress" />
                    <Button
                        tooltip="Delete carshop"
                        icon="sap-icon://delete"
                        press="onDeleteCarShopPress" />
                </Toolbar>
            </headerToolbar>
			<items>
				<StandardListItem title="{odata>name}" 
					type="Active"
					press="onSelectionChange"/>
			</items>
		</List>
	</Page>
</View>